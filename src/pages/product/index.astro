---
import Layout from "@/layouts/Layout.astro";
import LayoutWidth from "@/layouts/LayoutWidth.astro";	
import PostHeadingTile from "@/components/PostHeadingTile";
import { getCollection } from "astro:content";

const posts = (await getCollection("product")).sort();
---
<Layout title='プロダクト一覧' description='プロダクトの紹介投稿一覧'>
	<LayoutWidth>
		<div class="mx-8 mt-4 py-2">
			<p class="text-xl font-bold text-light-text dark:text-dark-text">{posts.length}個のプロダクトが見つかりました。</p>
		</div>
		<section class="px-4 pb-4">
			<ul class="space-y-4">
				{
					posts.map((post) => (
						<li>
							<PostHeadingTile category="product" post={post}/>
						</li>
					))
				}
			</ul>
		</section>
	</LayoutWidth>
</Layout>