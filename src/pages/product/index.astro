---
import Layout from "@/layouts/Layout.astro";
import LayoutWidth from "@/layouts/LayoutWidth.astro";	
import PostHeadingTile from "@/components/PostHeadingTile";
import { getCollection } from "astro:content";

const posts = (await getCollection("product")).sort();
---
<Layout title='プロダクト一覧' description='プロダクトの紹介投稿一覧'>
	<LayoutWidth>
		<div class="p-4">
			<p class="text-xl font-bold">{posts.length}個のプロダクトが見つかりました。</p>
			<section class="mt-4">
				<ul class="space-y-4">
					{
						posts.map((post) => (
							<li>
								<PostHeadingTile category="product" post={post}/>
							</li>
						))
					}
				</ul>
			</section>
		</div>
	</LayoutWidth>
</Layout>