---
import Meta from "@/components/Meta/Meta.astro"
import Links from "@/components/Meta/Links.astro"
import Header from "@/components/Header/Header.astro";
import Footer from "@/components/Footer/Footer"
import { SITE_TITLE } from "@/consts"

interface Props {
  title: string
  description: string
  keywords?: string[]
}
const { title, description, keywords=[] } = Astro.props
---
<!doctype html>
<html lang="ja">
  <head>
    <Meta title={`${title} | ${SITE_TITLE}`} description={description} keywords={keywords} />
    <slot name="additional-meta" />
    <Links />
    <slot name="additional-links" />
  </head>
  <body>
    <Header />
    <main class="w-full min-h-screen pt-header bg-light-bg dark:bg-dark-bg text-light-text dark:text-dark-text">
      <slot />
    </main>
    <Footer />
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
  </body>
</html>
