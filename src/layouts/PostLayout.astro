---
import Layout from '@/layouts/Layout.astro';
import LayoutWidth from '@/layouts/LayoutWidth.astro';

type Props = {
  title: string
  description: string
  tag: string[] | undefined
  headingImage: string | undefined
}

const { title, description, tag, headingImage } = Astro.props;
---
<Layout title={title} description={description}>
	<LayoutWidth>
		<div class="min-h-screen mx-auto py-12 px-12 sm:px-20 shadow-xl">
			<article>
        <slot name="date_slot" />
				<h1 class="my-4 text-2xl font-bold">{title}</h1>
				{
					tag && (
						<div class="flex space-x-2 m-2">
							<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="currentColor"><path d="M856-390 570-104q-12 12-27 18t-30 6q-15 0-30-6t-27-18L103-457q-11-11-17-25.5T80-513v-287q0-33 23.5-56.5T160-880h287q16 0 31 6.5t26 17.5l352 353q12 12 17.5 27t5.5 30q0 15-5.5 29.5T856-390ZM513-160l286-286-353-354H160v286l353 354ZM260-640q25 0 42.5-17.5T320-700q0-25-17.5-42.5T260-760q-25 0-42.5 17.5T200-700q0 25 17.5 42.5T260-640Zm220 160Z"/></svg>
							{
								tag.map((x) => (
									<a href={`/blog?tag=${x}`} class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-3 py-1 rounded dark:bg-blue-900 dark:text-blue-300 hover:bg-blue-300 dark:hover:bg-blue-700">{x}</a>
								))
							}
						</div>
					)
				}
				<div class="w-full">
					{headingImage && <img src={headingImage} alt="" class=" shadow-[0px_10px_30px_rgba(0,0,0,0.50)]" />}
				</div>
				<hr class="my-12" />
				<div class="prose dark:prose-invert sm:prose-lg lg:prose-xl ">
					<slot />
				</div>
			</article>
		</div>
	</LayoutWidth>
</Layout>