---
import type { CollectionEntry } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import LayoutWidth from '@/layouts/LayoutWidth.astro';

type Props = CollectionEntry<"product">['data'];

const { title, description, headingImage } = Astro.props;
---
<Layout title={title} description={description}>
	<LayoutWidth>
		<div class="min-h-screen mx-auto py-12 px-12 sm:px-20 shadow-xl">
			<article>
				<div>
					<div class="mt-8 mb-4 px-4">
						<h1 class="text-2xl font-bold">{title}</h1>
					</div>
					<div class="w-full">
						{headingImage && <img src={headingImage} alt="" class=" shadow-[0px_10px_30px_rgba(0,0,0,0.50)]" />}
					</div>
				</div>
				<hr class="my-12" />
				<div class="prose dark:prose-invert sm:prose-lg lg:prose-xl">
					<slot />
				</div>
			</article>
		</div>
	</LayoutWidth>
</Layout>